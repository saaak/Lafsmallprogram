.avatar {
  height: 70px;
  width: 70px;
  border-radius: 100px;
  /* margin-left: 50%; */
  position: absolute;
  left: 0;
  right: 0;
  top: -30px;
  bottom: 0;
  margin: auto;
  text-align: center;
}

.text {
  color: white;
  font-size: 17px;
  line-height: 255px;
}

.background {
  background-color:#f96159;
  width:100%;
  height:170px;
  position: relative;
  text-align: center;
}

.header {
    margin: 90rpx 0 90rpx 50rpx;
    border-bottom: 1px solid #ccc;
    text-align: center;
    width: 650rpx;
    height: 300rpx;
    line-height: 450rpx;
}
 
.header image {
    width: 200rpx;
    height: 200rpx;
}
 
.content {
    margin-left: 50rpx;
    margin-bottom: 90rpx;
}
 
.content text {
    display: block;
    color: #9d9d9d;
    margin-top: 40rpx;
}
 
.bottom {
    border-radius: 80rpx;
    margin: 70rpx 50rpx;
    font-size: 35rpx;
}

.list {
  line-height:0;
  border-radius:0;
  background-color: white;
  text-align: left;
  height: 44px;
}

.list::after {
  border-radius:0;
  border: none;
}