/* components/modal.wxss */
.modal{
  width:100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
  position: fixed;
  top: 0;
  left:0;
}
.modal-content{
  width: 100%;
  /* margin-left: 10%; */
  /* margin-top:200rpx; */
  min-height: 350rpx;
  background: #fff;
  position: absolute;
  bottom: 0px;
}
.modal-top{
  padding: 20rpx;
  /* background: #f2f2f2; */
}
.modal-body{
   /* padding:20rpx; */
   display: flex;
  justify-content: center;
  position: relative;
}
.modal-footer{
  padding: 20rpx;
  border-top: 1px solid #f2f2f2;
   position: absolute; 
  bottom: 0;
  left:0;
  width: 100%;
  display: flex;
  justify-content: flex-end;
}
.header {
  font-size: 17px;
  text-align: center;
}

.item1 {
  width:140px;
  height:140px;
  position: relative;
  right: 15px;
}

.item2 {
  width:140px;
  height:140px;
  position: relative;
  left: 15px;
}

.button {
  margin: 0;
  position:relative;
  padding-left:0px;
  padding-right:0px;
  text-decoration:none;
  overflow:hidden;
  color:#000000;
  background-color:white;
  border: none;
}

.button::after {
  border: none;
}